{
  "name": "mdc-light",
  "version": "0.1.0",
  "description": "Machine Data Connector Light",
  "main": "index.js",
  "repository": "git@gitlab.com:codestryke-tech/dmg-mori/mdc-light.git",
  "author": "codestryke <info@codestryke.com>",
  "license": "",
  "private": true,
  "dependencies": {
    "date-fns": "^2.22.1",
    "nodes7": "^0.3.12",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc -p tsconfig.json",
    "build:dist": "ncc build build/main/index.js -o runtime --minify",
    "build:mdclight": "yarn build && yarn build:dist && yarn docker:build:mdclight-prod",
    "docker:build:ci": "docker build -t registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/gitlab-ci -f ci.Dockerfile .",
    "docker:push:ci": "docker push registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/gitlab-ci",
    "docker:build:mtc": "docker build -t registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mtconnect -f docker/mtconnect_amd64.Dockerfile .",
    "docker:push:mtc": "docker push registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mtconnect",
    "docker:run:mtc": "docker run -it registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mtconnect /bin/bash",
    "docker:build:mdclight": "docker build -t registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mdc-light -f docker/mdc-light.Dockerfile .",
    "docker:push:mdclight": "docker push registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mdc-light",
    "docker:run:mdclight": "docker run -it registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mdc-light",
    "docker:build:mtc-prod": "docker buildx build --platform linux/arm64 -t registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mtconnect-prod_arm64:latest -f docker/mtconnect_arm64.prod.Dockerfile --push .",
    "docker:build:mdclight-prod": "docker buildx build --platform linux/arm64 -t registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mdclight-prod_arm64:latest -f docker/mdclight_arm64.prod.Dockerfile --push .",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@vercel/ncc": "^0.28.6",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
