{
  "name": "mdc-light",
  "version": "0.1.0",
  "description": "Machine Data Connector Light",
  "main": "index.js",
  "repository": "git@gitlab.com:codestryke-tech/dmg-mori/mdc-light.git",
  "author": "codestryke <info@codestryke.com>",
  "license": "",
  "private": true,
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "azure-iot-device": "^1.17.6",
    "azure-iot-device-mqtt": "^1.15.6",
    "azure-iot-provisioning-device": "^1.8.10",
    "azure-iot-provisioning-device-amqp": "^1.8.10",
    "azure-iot-provisioning-device-http": "^1.8.10",
    "azure-iot-provisioning-device-mqtt": "^1.7.10",
    "azure-iot-security-symmetric-key": "^1.7.10",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "date-fns": "^2.22.1",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-openapi-validator": "^4.13.1",
    "fs-extra": "^10.0.0",
    "jsonwebtoken": "^8.5.1",
    "https-proxy-agent": "^5.0.0",
    "node-opcua": "^2.50.0",
    "node-opcua-pki": "^2.12.0",
    "nodes7": "^0.3.12",
    "socks-proxy-agent": "^6.1.0",
    "swagger-routes-express": "^3.3.1",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "scripts": {
    "dev": "npm run loglevel:debug && ts-node-dev --respawn src/index.ts",
    "dev:webserver": "cd client && yarn start",
    "build": "tsc -p tsconfig.json",
    "build:dist": "ncc build build/main/index.js -o runtime --minify",
    "build:mdclight": "yarn docker:build:mdclight",
    "build:webserver": "cd client && yarn && yarn build && cd .. && cd user-docs && yarn && yarn build && cd .. && mv user-docs/build client/dist/mdc-light-client/help",
    "docker:build:webserver": "docker buildx build --platform linux/arm64,linux/amd64 -t registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mdc-web-server -f docker/mdcwebserver_arm64.Dockerfile --push client",
    "docker:build:ci": "docker build -t registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/gitlab-ci -f ci.Dockerfile .",
    "docker:push:ci": "docker push registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/gitlab-ci",
    "docker:build:mtc": "docker build -t registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mtconnect -f docker/mtconnect_amd64.Dockerfile .",
    "docker:push:mtc": "docker push registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mtconnect",
    "docker:run:mtc": "docker run -v $PWD/_mdclight/mtc_config/MtcAgentConfig_dev/schemas:/schemas -v $PWD/_mdclight/mtc_config/MtcAgentConfig_dev/agent.cfg:/agent.cfg -v $PWD/_mdclight/mtc_config/MtcAgentConfig_dev/MDCLight.xml:/MDCLight.xml -p 5000:5000 registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mtconnect:latest agent debug",
    "docker:build:mdclight-base": "docker buildx build --platform linux/arm64,linux/amd64 -t registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mdclight-base:latest -f docker/mdclight-base.Dockerfile --push .",
    "docker:build:mdclight": "docker buildx build --platform linux/arm64,linux/amd64 -t registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mdclight:latest -f docker/mdclight.Dockerfile --push .",
    "docker:run:mdclight": "docker run -it registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mdc-light",
    "docker:build:mtc-prod": "docker buildx build --platform linux/arm64 -t registry.gitlab.com/codestryke-tech/dmg-mori/mdc-light/mtconnect-prod_arm64:latest -f docker/mtconnect_arm64.Dockerfile --push .",
    "test": "jest",
    "copy_mdc_conf": "scp -r _mdclight/config root@$IP:/etc/MDCLight",
    "copy_mtc_conf": "scp -r _mdclight/mtc_config/MtcAgentConfig_prod root@$IP:/etc/MDCLight/mtc_config",
    "copy_compose": "scp docker/docker-compose_arm64.yaml root@$IP:/root/docker-compose.yaml",
    "format": "prettier --write .",
    "loglevel:debug": "export LOG_LEVEL=debug",
    "setup_mock_sysfs": "mkdir -p src/modules/Iot2050MraaDI10/sys/bus/iio/devices/iio:device0 && echo 333 > src/modules/Iot2050MraaDI10/sys/bus/iio/devices/iio:device0/in_voltage1_raw && echo 555 > src/modules/Iot2050MraaDI10/sys/bus/iio/devices/iio:device0/in_voltage2_raw"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "@vercel/ncc": "^0.28.6",
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "jest": "^27.0.6",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.8",
    "typed-emitter": "^1.3.1",
    "typescript": "^4.3.5"
  }
}
